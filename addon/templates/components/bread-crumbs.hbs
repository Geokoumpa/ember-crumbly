{{#each routeHierarchy as |route|}}
  {{#if hasBlock}}
    {{yield this route}}
  {{else}}
    <li class="{{crumbClass}}">
    {{#if route.linkable}}
      {{#link-to route.path class=linkClass}}
          {{route.title}}
      {{/link-to}}
    {{else}}
        {{route.title}}
    {{/if}}
    </li>
  {{/if}}
{{/each}}
